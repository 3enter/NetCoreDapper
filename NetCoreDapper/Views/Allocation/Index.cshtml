@model IEnumerable<NetCoreDapper.Models.Allocation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<table class="table table-condensed" style="border-collapse:collapse;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            string sv = "#A" + item.Id; 
            {
                <tr data-toggle="collapse" data-target="@sv" class="accordion-toggle">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        <a asp-action="Create" asp-route-id="@item.Id">Add</a> 
                    </td>
                </tr>
                <tr class="Pad">
                    <td colspan="3" class="Pad ">
                        @{ string ss = "A" + item.Id; }
                        <table class="accordian-body collapse" id="@ss">
                            <thead>
                            <th>
                                @Html.DisplayNameFor(Model => Model.Det.StudentName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(Model => Model.Det.StudentFamily)
                            </th>
                            <th></th>
                            </thead>
                            <tbody>
                                @foreach (var child in item.Details)
                                {
                                    <tr>
                                        <td>
                                            @child.StudentName
                                        </td>
                                        <td>
                                            @child.StudentFamily
                                        </td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@child.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


